include $(FUZIX_ROOT)/Applications/rules.tms9995

SRCS  = invaders.c

OBJS = $(SRCS:.c=.o)
APPS = $(OBJS:.o=)
all: $(APPS) size.report

$(APPS): %: %.o
	$(LINKER) -o $@ $(LINKER_OPT) $(CRT0) $^ -lcursestms9995 -ltermcaptms9995 $(LINKER_LIB)

size.report: $(APPS) $(APPSNS)
	ls -l $^ > $@

clean:
	rm -f $(OBJS) $(APPS) *.o core *~ *.asm *.lst *.sym *.map *.noi *.lk *.ihx *.tmp *.bin size.report

rmbak:
	rm -f *~ core
