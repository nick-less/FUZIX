#!/bin/bash
#
TARGET=a.out
# TODO; stack option
STACK=
ARGS=""
#
#	Find the target and strip out the -o foo option
#
while [[ $# -gt 0 ]]
do
	case "$1" in
	-o)
	TARGET="$2"
	shift
	shift
	;;
	-s)
	STACK="$2"
	shift
	shift
	;;
	*)
	ARGS+=' '"$1"
	shift
	;;
esac
done

#
#	Relocatable link
#
set -e
#
fcc -mz80 -X -s $ARGS -o "$TARGET" -M
