#!/bin/bash
#
TARGET=a.out

ARGS=""
#
#	Find the target and strip out the -o foo option
#
while [[ $# -gt 0 ]]
do
	case "$1" in
	-o)
	TARGET="$2"
	shift
	shift
	;;
	-s)
	STACK="$2"
	shift
	shift
	;;
	*)
	ARGS+=' '"$1"
	shift
	;;
esac
done

#
#	Link at 0x100 DP 0x00
#
set -e
#
# With
cc68 -tfuzixrel1 -s $ARGS -o "$TARGET".b1 -M
cc68 -tfuzixrel2 -s $ARGS -o "$TARGET".b2
$FUZIX_ROOT/Library/tools/relocbin6303 "$TARGET".b1 "$TARGET".b2 "$TARGET"
rm -f "$TARGET.b1"
rm -f "$TARGET.b2"
